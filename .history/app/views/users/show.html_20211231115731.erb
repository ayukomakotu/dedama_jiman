<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-xs-4">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
      </section>
  </aside>

  <div class="col-xs-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <% @posts.each do |post| %>
          <li id="post-<%= post.id %>">
            <span class="user"><%= link_to post.user.name, post.user %></span>
            <span class="machine"><%= post.machine.name %></span>
            <% debugger %>
            <span class="acquired">
              <%= post.acquireds.first.number %>
              <%= post.acquireds.first.unit %>
            </span>
            <span class="content"><%= post.content %></span>
            <span class="timestamp">
                Posted <%= time_ago_in_words(post.created_at) %> ago.
            </span>
          </li>
        <% end %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </div>

</div>

